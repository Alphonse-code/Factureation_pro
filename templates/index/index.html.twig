{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
<style>
      .animationload {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #fff;
            z-index: 999999;
      }

      .loader {
            width: 200px;
            height: 200px;
            font-size: 24px;
            text-align: center;
            position: absolute;
            left: 50%;
            top: 50%;
            background-image: url(../asset/img/preloader.gif);
            background-repeat: no-repeat;
            background-position: center;
            margin: -100px 0 0 -100px;
      }

      /* 6 Home
----------------------------------------------------------------------------- */
      .main-home {
            padding: 330px 0px 250px 0;
            z-index: 1;
            text-align: center;
            position: relative;
            font-size: 13px;
            color: #fff;
            background: #000;
            min-height: 400px;
      }

      .home-page-photo {
            background-image: url(../asset/img/bg-5.jpg);
            background-size: cover;
            z-index: -1;
            position: absolute;
            top: 0;
            opacity: 0.50;
            right: 0;
            bottom: 0;
            left: 0;
      }
</style>
<!-- Preloader -->
<div class="animationload">
      <div class="loader">
            <p class="" style="color:#F70081;">Facture PRO</p>
      </div>
</div>
<div data-spy="scroll" data-offset="80">
      <!-- /HOME -->
      <section class="main-home" id="home">
            <div class="home-page-photo"></div> <!-- Background image -->
            <div class="home__header-content">
                  <div>
                        <h1 class="intro-title">Connectez vous sur Facture Pro</h1>
                        <p class="intro-text">Lorem ipsum dolor sit amet consectetur adictum piscing elit fusce
                              sit amet
                              inerdum neque ultra icies <br /> pelentesque tempor justo a scelerisque placerat sit
                              amet
                              magna e.</p>
                        <a class="btn" style="background-color: #F70081; color: white;"
                              href="{{path('app_login')}}">CONNEXION</a>
                  </div>
            </div>
      </section>
</div>

{% endblock %}