{% extends 'layout.html.twig' %}
{% block title %}nouveau client{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <div class="d-flex">
                <h5 class="p-2">Type de client</h5>
                <div class="p-2"><select id="client-type" class="form-select form-select-sm">
                        <option value="0">Particulier</option>
                        <option value="1">Professionnel</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="card-body">
            {{ form_start(form)}}
            <div class="row">
                <div class="col-lg-6">
                    <h4 class="text-muted">COORDONNEES</h3>
                        <div id="client">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="col">
                                            Nom
                                            {{ form_row(form.nomClient,{'attr':{'class':'form-control-sm'}})}}
                                        </div>
                                        <div class="col">
                                            Pr√©nom
                                            {{ form_row(form.prenomClient,{'attr':{'class':'form-control-sm'}})}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="societe" hidden>
                            <div class="row">
                                <div class="col-lg-12">
                                    Nom de l'entreprise</div>
                                <div class="col-lg-12">
                                    {{ form_row(form.nomSociete,{'attr':{'class':'form-control-sm'}})}}
                                    <div class="row">
                                        <div class="col">
                                            <label>Pays</label>
                                            {{
                                            form_row(form.titreEntrepriseClient,{'attr':{'class':'form-control-sm'}})}}
                                        </div>
                                        <div class="col">
                                            <label>Pays</label>
                                            {{
                                            form_row(form.numeroDeSerieClient,{'attr':{'class':'form-control-sm'}})}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Portable 1</label>
                                {{ form_row(form.tel,{'attr':{'class':'form-control-sm'}})}}
                            </div>
                            <div class="col-lg-6">
                                <label>Portable 2</label>
                                {{ form_row(form.tel2,{'attr':{'class':'form-control-sm'}})}}
                            </div>
                        </div>
                        <div class="row">
                            <label>Fixe</label>
                            {{ form_row(form.fixe,{'attr':{'class':'form-control-sm'}})}}
                        </div>
                        <div class="row">
                            <div class="col-lg-12">E-mail</div>
                            <div class="col-lg-12">{{ form_row(form.email,{'attr':{'class':'form-control-sm'}})}}</div>
                        </div>

                </div>
                <div class="col-lg-6">
                    <h4 class="text-muted">ADRESSE DE FACTURATION</h3>
                        <div class="row">
                            <div class="col-lg-12">Rue</div>
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-lg-6">{{
                                        form_row(form.nomRueClient,{'attr':{'class':'form-control-sm'}})}}</div>
                                    <div class="col-lg-6">{{
                                        form_row(form.numRueClient,{'attr':{'class':'form-control-sm'}})}}</div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label>Ville</label>
                                {{ form_row(form.villeClient,{'attr':{'class':'form-control-sm'}})}}
                            </div>
                            <div class="col">
                                <label>Code Postal</label>
                                {{ form_row(form.codePostalClient,{'attr':{'class':'form-control-sm'}})}}
                            </div>
                        </div>
                        <div class="row">
                            <label>Pays</label>
                            {{ form_row(form.paysClient,{'attr':{'class':'form-control-sm'}})}}
                        </div>
                        <div class="row">
                            <div class="col-lg-12">Adresse</div>
                            <div class="col-lg-12">{{
                                form_row(form.adresseFactureClient,{'attr':{'class':'form-control-sm'}})}}</div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">Condition de paiement</div>
                            <div class="col-lg-12">{{
                                form_row(form.coditionDePaiement,{'attr':{'class':'form-control-sm'}})}}</div>
                        </div>
                </div>
            </div>
            <div class="d-flex justify-content-end my-2">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save mx-2"></i>Enregistrer</button>
            </div>
            {{ form_end(form)}}
        </div>
    </div>
</div>

{% endblock%}